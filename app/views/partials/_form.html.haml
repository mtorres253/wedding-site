.content
  %h2.articleTitle.textShadow
    %span.yellow RSVP
    Below
  .box.transparent_white
    .rsvp_inner_box
      .row
        .large-2.columns &nbsp;
        .large-4.columns
          %button{type: "button", onclick: "javascript:$('#response_coming_true').prop('checked', true)", :class => "medium button left [radius round]"} I'm coming!
        .large-4.columns
          %button{type: "button", onclick: "javascript:$('#response_coming_false').prop('checked', true)", :class => "medium button right [radius round]"} I can't make it.
        .large-2.columns &nbsp;
      = form_for [:admin, @response], remote: true do |f|
        - if @response.errors.any?
          .row
            .large-12.columns
              #error_explanation
                %h2
                  = pluralize(@response.errors.count, "error")
                  prohibited this response from being saved:
                %ul
                  - @response.errors.full_messages.each do |msg|
                    %li= msg
        .row.hidden
          .large-12.columns
            = f.radio_button :coming, true, {placeholder: "large-2.columns"}
            = f.radio_button :coming, false, {placeholder: "large-2.columns"}
        .row
          .large-2.columns &nbsp;
          .large-2.columns
            = f.label :adults
            = f.select :adults, [1, 2], {placeholder: "large-2.columns"}
          .large-2.columns
            = f.label :children
            = f.select :children, [1, 2], {placeholder: "large-2.columns"}
          .large-4.columns
            = f.label :friday_reception
            = f.select :friday_reception, [["I'm coming",true], ["I'm not coming", false]], {placeholder: "large-3.columns"}
          .large-2.columns &nbsp;
        .row
          .large-2.columns &nbsp;
          .large-8.columns
            = f.label :comments
            = f.text_area :comments
            - if @guest
              .field
                = f.hidden_field :guest_id, :value => @guest.id
          .large-2.columns &nbsp;
        .row
          .large-12.columns &nbsp;
        .row
          .large-12.columns
            %button{type: "button", onclick: "javascript:$('form').first().submit()", :class => "large button [radius round] center"} Save My RSVP